<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flyout.MainPage"
             xmlns:local="clr-namespace:flyout.Views">
    <TabBar>
        <Tab Title="Đăng nhập" Route="loginpage">
            <ShellContent ContentTemplate="{DataTemplate local:LoginPage}">
            </ShellContent>
        </Tab>
        <Tab Title="Đăng ký" Route="registerpage">
            <ShellContent ContentTemplate="{DataTemplate local:RegisterPage}">
            </ShellContent>
        </Tab>
        <Tab Title="Quên mật khẩu?" Route="resetpassword">
        <ShellContent ContentTemplate="{DataTemplate local:ResetPassword}">
        </ShellContent>
        </Tab>
    </TabBar>
</Shell>