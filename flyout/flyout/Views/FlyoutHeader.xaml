<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flyout.Views.FlyoutHeader"
             BackgroundColor="#66CCFF"
              HeightRequest="100"
              Padding="0,40,0,0"
        >
    <Image Source="logoBenhVien.png"
           Grid.Row="0"
           Grid.Column="0"
           Aspect="AspectFit"
           HorizontalOptions="EndAndExpand"
           VerticalOptions="CenterAndExpand"/>
    <Label Text="UMC" FontAttributes="Bold" FontSize="35" TextColor="White" HorizontalOptions="Start" Grid.Row="0"  Grid.Column="1" VerticalOptions="CenterAndExpand"/>
    <Label x:Name="txtEmailUser" Margin="0,10,0,0" FontSize="16" TextColor="Black" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="Center"/>

</Grid>