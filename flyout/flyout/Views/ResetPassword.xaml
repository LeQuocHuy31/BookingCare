<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="flyout.Views.ResetPassword"
             BackgroundColor="#CCFFFF"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <Image Margin="0,40,0,20" Source="logoBenhVien.png" HeightRequest="200" WidthRequest="200" HorizontalOptions="CenterAndExpand"/>
            <Entry x:Name="email" Placeholder="Nhập địa chỉ email"></Entry>
            <Button x:Name="cmdSend" Text="Gửi mã" Clicked="cmdSend_Clicked" Margin="10" FontAttributes="Bold" CornerRadius="20" HorizontalOptions="Center"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>