            <!--<Button Margin="20,20,20,5" CornerRadius="5" Text="Đã từng khám, nhập số hồ sơ" TextColor="White" BackgroundColor="#00CCFF"/>-->
            <Button x:Name="cmdTaoHoSo" Margin="20,20,20,10" CornerRadius="5" Text="Tạo hồ sơ Khám bệnh"  Clicked="cmdTaoHoSo_Clicked"
                    TextColor="White" BackgroundColor="#00CCCC"/>
        </StackLayout>
    </ContentPage.Content>
